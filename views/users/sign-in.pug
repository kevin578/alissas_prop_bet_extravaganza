extends ../layout

block content
  .container
    form(action='/users/sign-in' method='post')
      .mb-3
        label.form-label(for='sign-up-username') Email address
        input#sign-up-username.form-control(type='email' name = 'email' placeholder='name@example.com')
      .mb-4
        label.form-label(for='sign-up-password') Password
        input#sign-up-password.form-control(type='password' name = 'password')
      button.btn.btn-primary(type='submit') Sign In
